{% if (pageName == "book_page") %}
    {% if (applicationStatusInfo != null) %}
        <script type="text/javascript">
            $(function(){
                var delay_popup = 0;
                setTimeout("document.getElementById('send-application-notification').style.display='block'", delay_popup);
                //document.cookie = '_visited=1; path=/';
            });
        </script>
    {% endif %}
{% endif %}
<div id="send-application-notification" class="modal" onclick="document.getElementById('send-application-notification').style.display='none';">
    <p class="send-application-notification__message-title center-align">Вы подали заявку</p>
    <input type="submit" class="send-application-notification__ok-btn button-style" value="Ок" onclick="document.getElementById('send-application-notification').style.display='none';">
</div>

<div class="book-page-content bold-blue-border">
    <div class="book-page-content__image-and-characteristics bold-blue-border">
        <div class="image-container center-align">
            <img class="image-container__book-image bold-blue-border" src="{{ bookData.bookImage }}"
                alt="{{ bookData.name }}">
        </div>
        <div class="book-page-content__characteristics-container bold-blue-border">
            <ul>
                <li>
                    <b>Название: </b><a>{{ bookData.name }}</a>
                </li>
                <li>
                    <b>Автор: </b><a>{{ bookData.author }}</a>
                </li>
                <li>
                    <b>Количество страниц: </b><a>{{ bookData.pageCount }}</a>
                </li>
                <li>
                    <b>ISBN: </b><a>{{ bookData.isbn }}</a>
                </li>
                <li>
                    <div class="rating-book">
                        <b>Рейтинг: </b>
                    </div>
                    <script type="text/javascript">
                        var rating = JSON.parse("{{ bookData.rating }}")
                        $('.ratingBook' ).raty({
                            readOnly:  true,
                            start:     0,
                            score: Number(rating)
                        });
                    </script>
                </li>
            </ul>
        </div>
    </div>
    <div class="book-page-content__amount-and-description bold-blue-border">
        <div class="amount-container bold-blue-border inline-block">
            <ul>
                <li>
                    <b>Количество</b>
                </li>
                <li>
                    <b>(взято/всего): </b>
                </li>
                <li>
                    <a>{{ readCount }}/{{ ownerCount }}</a>
                </li>
            </ul>
        </div>
        <div class="description-container bold-blue-border inline-block">
            <ul>
                <li>
                    <b>Описание</b>
                </li>
                <li>
                    <a>{{ bookData.description }}</a>
                </li>
            </ul>
        </div>
    </div>
</div>
