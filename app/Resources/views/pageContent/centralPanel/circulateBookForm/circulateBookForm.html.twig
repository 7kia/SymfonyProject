<div class="circulate-book-form">
    {% if bookData.books|length > 0 %}
    <div class="content-page-title">
        <b>
            {% if book_list_name == "taken_books" %}
                Взятые книги
            {% elseif book_list_name == "applications" %}
                Заявки на книги
            {% elseif book_list_name == "given_books" %}
                Отданные книги
            {% endif %}
        </b>
    </div>
    <table id="circulate-book-grid" class="display" cellspacing="2" border='1'>
        <thead>
        <tr>
            <th>Название</th>
            <th>Автор</th>
            <th>Рейтинг</th>
            <th>
                {% if book_list_name == "taken_books" %}
                    Владелец
                {% elseif book_list_name == "applications" %}
                    Кто возьмёт
                {% elseif book_list_name == "given_books" %}
                    Кто взял
                {% endif %}
                Срок сдачи
                {% if book_list_name != "taken_books" %}
                    Опции
                {% endif %}
            </th>
        </tr>
        </thead>
        <tbody style='cursor:pointer;'>
        {% for i in 0..(bookData.books|length - 1) %}
            <tr>
                <td>
                    <a href="{{ serverUrl }}book_page?book_id={{ bookData.books[i].id }}">
                        {{ bookData.books[i].name }}
                    </a>
                </td>
                <td>{{ bookData.books[i].author }}</td>
                <td>
                    <div class="rating{{ i }} center-align"></div>
                    <script type="text/javascript">
                        var rating = JSON.parse("{{ bookData.books[i].rating }}")
                        $('.rating{{ i }}' ).raty({
                            readOnly:  true,
                            start:     0,
                            score: Number(rating)
                        });
                    </script>
                </td>
                <td>
                    <a href="{{ serverUrl }}user_book_catalog?book_list_name=personal_books&owner_id={{ bookData.userId[i] }}"
                                              class="pure-menu-link">
                        {{ bookData.users[i] }}
                    </a>
                </td>
                <td>{{ bookData.deadlines[i] }}</td>
                {% if book_list_name != "taken_books" %}
                    <td>
                        <div class="circulate-book-grid-options">
                            {% if book_list_name == "given_books" %}
                                <a href="{{ serverUrl }}circulation_books?book_list_name=given_books&owner_id={{ currentUser.id }}&delete={{ bookData.books[i].id }}&other_user={{ bookData.userId[i] }}"
                                   class="pure-menu-link">
                                    Удалить
                                </a>
                            {% elseif book_list_name == "applications" %}
                                <a href="{{ serverUrl }}circulation_books?book_list_name=applications&owner_id={{ currentUser.id }}&accept={{ bookData.books[i].id }}&other_user={{ bookData.userId[i] }}"
                                   class="pure-menu-link">
                                    Принять
                                </a>
                                <div class="circulate-book-grid_options__delimiter"><b>,</b></div>
                                <a href="{{ serverUrl }}circulation_books?book_list_name=applications&owner_id={{ currentUser.id }}&delete={{ bookData.books[i].id }}&other_user={{ bookData.userId[i] }}"
                                   class="pure-menu-link">
                                    Отклонить
                                </a>
                            {% endif %}
                        </div>
                    </td>
                {% endif %}

            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% else %}
        <div class="empty-table-title center-align">
            <b>Таблица пуста</b>
        </div>

    {% endif %}
</div>
