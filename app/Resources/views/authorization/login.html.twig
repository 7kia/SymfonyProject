{% extends 'base.html.twig' %}

{% block title %}
    Авторизация
{% endblock %}

{% block cssReference %}
    <link rel="stylesheet" type="text/css" href="styles/colorStyles.css">
    <link rel="stylesheet" type="text/css" href="styles/authorization/login.css">
    <link rel="stylesheet" type="text/css" href="styles/common.css">
{% endblock %}

{% block jsReference %}
{% endblock %}

{% block boostrapOptions %}
    {% include "boostrapOptions.html.twig" %}
{% endblock %}

{% block body %}
    <form class="login_form" action="{{ path('login') }}" method="post">
        <h1 class="h3 mb-3 font-weight-normal">Авторизация</h1>
        {% if error %}
            <div class="error-message">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <div class="text_boxs">
            <div class="input-group">
                <input class="form-control text_box"
                       placeholder="логин"
                       type="text"
                       id="username"
                       name="_username" value="{{ last_username }}" />
            </div>
            <div class="input-group">
                <input class="form-control text_box"
                       placeholder="пароль"
                       type="password"
                       id="password"
                       name="_password" />
            </div>
            <div class="buttons">
                <button type="submit" class="btn btn-lg btn-primary btn-block">Войти</button>
            </div>
        </div>
    </form>
{% endblock %}